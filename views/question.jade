extends layout

block content
	<!--Navbar Content-->
	.navbar.navbar-default
		.container-fluid
			.navbar-header
				a(class='navbar-brand', href='/')
					img(alt='Home', src='/images/logo.png' class='img-rounded' width='50' height='50')
			.nav.navbar-nav.navbar-right		
				a.button.btn.btn-default(class='navbar-btn', href='/logout') 
					i.glyphicon.glyphicon-log-out  
					span  Sign out

	legend Edit Question #{question.id}
	.row
		.col-md-6
			form(method='post', action='/questions/'+ question.id)
				.form-group
					textarea.input-lg(name='question', id='question', class='form-control', rows='2', required)=question.question
				button.btn.btn-primary.btn-block Save
				a.btn.btn-link.btn-block(href='/questions') Cancel	
		.col-md-6
			ul.list-group 
				each choice in question.Choices 
					li.list-group-item
						form(method='post', action='/questions/' + question.id + '/choices/' + choice.id)
							.row
								.col-xs-6
									input.form-control(type='text', name='choice', id='choice_'+choice.id, value=choice.choice, required)
								.col-xs-3
									button.btn.btn-success.btn-block(type='submit', alt='Save') 
										i.glyphicon.glyphicon-check
								.col-xs-3
									a.btn.btn-danger.btn-block(href='/questions/' + question.id + '/choices/' + choice.id + '/delete')
										i.glyphicon.glyphicon-trash

	legend Add a Choice
	.col-md-4
		form(method='post', action= question.id+'/choices/add')
			.input-group
				input.form-control(type='text', name='choice', placeholder='Enter a choice', required)
				span.input-group-btn
					button.btn.btn-success(type='submit')
						i.glyphicon.glyphicon-check