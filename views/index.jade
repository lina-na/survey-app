
extends layout

block content
	a.btn.btn-primary(href='/login') Admin
	h1 This is a Survey
	h2 #{question.question}
	form(method='post', action='/')
		each choice in choices
			h2 #{choice.id}
			.radio
				label
					input(type='radio', name='choice_id', id='choice_id_'+ choice.id, value=choice.id)
					p=choice.choice
		p
			button.btn.btn-primary.btn-lg(type='submit', role='button') Submit
		input(type='hidden', name='question_id', id='question_id', value=question.id)
		input(type='hidden', name='guest_id', id='guest_id', value=guest.id)

